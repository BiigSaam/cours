{% extends "layouts/back-end/base.twig" %}

{% block main %}
	<div class="bg-white rounded-2xl shadow-md pb-6">
		<header class="mb-6 p-6 pl-8 text-xl font-bold">
			<p>Editer
				{{ sae.title }}</p>
		</header>

        <div class="px-8">
            <form action="" method="post">
                <label class="block mb-4">
                    <span class="font-bold text-slate-700">Titre</span>
                    <input class="block bg-white w-full border border-slate-300 rounded-md py-2 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="title" value="{{ sae.title }}"/>
                </label>
                <label class="block mb-4">
                    <span class="font-bold text-slate-700">Contenu</span>
                    <textarea 
                        name="content" 
                        cols="15" 
                        rows="5"
                        maxlength="75"
                        class="block bg-white w-full border border-slate-300 rounded-md py-2 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"
                    >{{ sae.content }}</textarea>
                    <p class="text-sm">
                        Limité 75 caractères
                    </p>
                </label>

                <button class="mt-3 px-4 py-2 font-semibold text-sm bg-cyan-500 text-white rounded-2xl shadow-sm">Sauvegarder</button>
            </form>
        </div>
	</div>
{% endblock %}
